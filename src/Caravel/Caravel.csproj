<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <OutputType>Library</OutputType>
        <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
        <Nullable>enable</Nullable>
        <RootNamespace>Caravel</RootNamespace>
        <IsPackable>true</IsPackable>
        <PackageVersion>0.4.2</PackageVersion>
        <RepositoryUrl>https://github.com/Talento90/Caravel</RepositoryUrl>
        <PackageTags>dotnetcore,sdk</PackageTags>
        <LangVersion>8</LangVersion>
        <Title>Caravel</Title>
        <Authors>Marco Talento</Authors>
        <Description>Caravel is a package that contains common utilities for building dotnet applications.</Description>
        <PackageProjectUrl>https://github.com/Talento90/Caravel</PackageProjectUrl>
        <PackageIconUrl>https://github.com/Talento90/Caravel/blob/master/assets/logo.ico</PackageIconUrl>
        <PackageLicenseUrl>https://github.com/Talento90/Caravel/blob/master/LICENSE</PackageLicenseUrl>
    </PropertyGroup>

</Project>
